            citiesByProvince: { "ON": ["Toronto", "Ottawa"], "QC": ["Montreal", "Quebec City"], "BC": ["Vancouver", "Victoria"], "AB": ["Calgary", "Edmonton"] },
            format: (addr) => `${addr.street}, ${addr.city}, ${addr.provinceAbbr} ${addr.postalCode}`
        }
    },
