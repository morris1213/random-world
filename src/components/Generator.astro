<div class="generator-container">
  <div class="header">
    <h1 class="title">Random Profile Generator</h1>
    <p class="subtitle">Generate personal information for multiple countries with one click</p>
  </div>

  <div class="controls">
    <div class="select-container">
        <select id="country-select">
            <option value="US">United States</option>
            <option value="GB">United Kingdom</option>
            <option value="CA">Canada</option>
            <option value="AU">Australia</option>
            <option value="DE">Germany</option>
            <option value="JP">Japan</option>
        </select>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m6 9 6 6 6-6"/></svg>
    </div>
    <button id="generate-btn" class="button-glow">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
      <span>Generate New Profile</span>
    </button>
  </div>

  <div id="result-container" class="result-card"></div>

  <div class="controls">
    <button id="copy-btn" class="button-secondary" disabled>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>
      <span>Copy Profile</span>
    </button>
  </div>
</div>

<script>
  // --- DOM Elements ---
  const generateBtn = document.getElementById('generate-btn');
  const copyBtn = document.getElementById('copy-btn');
  const resultContainer = document.getElementById('result-container');
  const countrySelect = document.getElementById('country-select');

  // --- Data for Generation ---
  const emailDomains = {
    common: ['gmail.com', 'yahoo.com', 'outlook.com', 'icloud.com'],
    US: ['aol.com', 'comcast.net'],
    GB: ['hotmail.co.uk', 'btinternet.com', 'sky.com'],
    DE: ['web.de', 'gmx.de', 't-online.de'],
    JP: ['yahoo.co.jp', 'ocn.ne.jp']
  };

  const countryData = {
    "US": {
        firstNames: ['John', 'Michael', 'David', 'James', 'Robert', 'Chris', 'Mary', 'Jennifer', 'Linda', 'Patricia', 'Jessica', 'Sarah'],
        lastNames: ['Smith', 'Johnson', 'Williams', 'Brown', 'Jones', 'Garcia', 'Miller', 'Davis', 'Rodriguez', 'Martinez'],
        streetNames: ['Main St', 'Highland Ave', 'Maple St', 'Oak Ave', 'Pine St', 'Washington St'],
        jobTitles: ['Software Engineer', 'Project Manager', 'Data Scientist', 'Graphic Designer', 'Marketing Manager', 'Accountant'],
        phoneFormat: () => `(${getRandomNumber(201, 999)}) ${getRandomNumber(100, 999)}-${getRandomNumber(1000, 9999)}`,
        nationalIdName: "SSN",
        nationalIdFormat: () => `${getRandomNumber(100, 999)}-${getRandomNumber(10, 99)}-${getRandomNumber(1000, 9999)}`,
        emailDomains: [...emailDomains.common, ...emailDomains.US],
        address: {
            states: { "CA": "California", "NY": "New York", "TX": "Texas", "FL": "Florida", "IL": "Illinois" },
            citiesByState: { "CA": ["Los Angeles", "San Francisco", "San Diego"], "NY": ["New York City", "Buffalo"], "TX": ["Houston", "Dallas"], "FL": ["Miami", "Orlando"], "IL": ["Chicago", "Springfield"] },
            format: (addr) => `${addr.street}, ${addr.city}, ${addr.stateAbbr} ${addr.zip}`
        }
    },
    "GB": {
        firstNames: ['Oliver', 'George', 'Harry', 'Noah', 'Jack', 'Leo', 'Olivia', 'Amelia', 'Isla', 'Ava', 'Emily', 'Mia'],
        lastNames: ['Smith', 'Jones', 'Taylor', 'Brown', 'Williams', 'Wilson', 'Johnson', 'Davies', 'Robinson', 'Wright'],
        streetNames: ['High Street', 'Station Road', 'Main Street', 'Park Road', 'Church Road', 'London Road'],
        jobTitles: ['Software Developer', 'Project Manager', 'Data Analyst', 'Graphic Designer', 'Marketing Executive', 'Accountant'],
        phoneFormat: () => `07${getRandomNumber(100, 999)} ${getRandomNumber(100000, 999999)}`,
        nationalIdName: "NINO",
        nationalIdFormat: () => `QQ ${getRandomNumber(10, 99)} ${getRandomNumber(10, 99)} ${getRandomNumber(10, 99)} A`,
        emailDomains: [...emailDomains.common, ...emailDomains.GB],
        address: {
            cities: ['London', 'Manchester', 'Birmingham', 'Glasgow', 'Liverpool', 'Bristol'],
            counties: ['Greater London', 'Greater Manchester', 'West Midlands', 'West Yorkshire', 'Merseyside'],
            format: (addr) => `${addr.street}, ${addr.city}, ${addr.county}, ${addr.postcode}`
        }
    },
    "CA": {
        firstNames: ['Liam', 'Noah', 'William', 'James', 'Oliver', 'Benjamin', 'Olivia', 'Emma', 'Charlotte', 'Amelia', 'Sophia', 'Mia'],
        lastNames: ['Smith', 'Brown', 'Tremblay', 'Martin', 'Roy', 'Gagnon', 'Lee', 'Wilson', 'Johnson', 'MacDonald'],
